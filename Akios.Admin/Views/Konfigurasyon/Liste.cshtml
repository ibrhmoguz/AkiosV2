@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        $("#masterTitle").html("Konfigürasyon");
        $("#masterDescription").text("Sistemde tanımlı konfigürasyonları listeler.");
        LoadListData();
    });

    function LoadListData() {
        $("#tableKonfigurasyonlar").dataTable({
            "sAjaxSource": "Konfigurasyon/JsonList",
            "aaSorting": [[1,'asc']],
            "aoColumnDefs": [
            {
                "aTargets": [0],
                "bVisible":false
            },
            {
                "aTargets": [4],
                "bSortable": false,
                "mRender": function (data, type, row) {
                    return '<input type="button" class="btn btn-block btn-info" value="Düzenle" KonfigurasyonId ="' + row[0] + '"/>';
                }
            },
            {
                "aTargets": [5],
                "bSortable": false,
                "mRender": function (data, type, row) {
                    return '<input type="button" class="btn btn-block btn-danger" value="Sil" KonfigurasyonId ="' + row[0] + '"/>';
                }
            }]
        });
    }
</script>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <table id="tableKonfigurasyonlar" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Müşteri</th>
                            <th>Konfigurasyon Adı</th>
                            <th>Konfigurasyon Değeri</th>
                            <th style="width:8%"></th>
                            <th style="width:8%"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

