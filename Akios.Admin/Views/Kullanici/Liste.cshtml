@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        $("#masterTitle").html("Kullanıcı");
        $("#masterDescription").text("Sistemde tanımlı kullanıcıları listeler.");
        LoadListData();
    });

    function LoadListData() {
        $("#tableKullanicilar").dataTable({
            "sAjaxSource": "Kullanici/JsonList",
            "aaSorting": [[1,'asc']],
            "aoColumnDefs": [
            {
                "aTargets": [0],
                "bSortable": false,
                "render": function (data, type, row) {
                    return '<img class="img-circle" width="50" height="50" src="/Kullanici/FotoYukle?kullaniciId=' + row[0] + '"/>';
                }
            },
            {
                "aTargets": [5],
                "bSortable": false,
                "mRender": function (data, type, row) {
                    return '<input type="button" class="btn btn-block btn-info" value="Düzenle" KullaniciId ="' + row[0] + '"/>';
                }
            },
            {
                "aTargets": [6],
                "bSortable": false,
                "mRender": function (data, type, row) {
                    return '<input type="button" class="btn btn-block btn-danger" value="Sil" KullaniciId ="' + row[0] + '"/>';
                }
            }]
        });
    }
</script>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-body">
                <table id="tableKullanicilar" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width:5%"></th>
                            <th>Kullanıcı Adı</th>
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th>Müşteri</th>
                            <th style="width:8%"></th>
                            <th style="width:8%"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
