@model Akios.Admin.Models.MusteriListViewModel
@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        $("#masterTitle").html("Müşteriler");
        $("#masterDescription").text("Sistemde tanımlı müşterileri listeler.");
        LoadListData();
    });

    function LoadListData() {
        $("#tableMusteriler").dataTable({
            "sAjaxSource": "Musteri/JsonList",
            "aaSorting": [[1,'asc']],
            "aoColumnDefs": [
            {
                "aTargets": [0],
                "bSortable": false,
                "render": function (data, type, row) {
                    return '<img class="img-circle" width="50" height="50" src="/Musteri/LogoYukle?musteriId=' + row[0] + '"/>';
                }
            },
            {
                "aTargets": [9],
                "bSortable": false,
                "mRender": function (data, type, row) {
                    return '<input type="button" class="btn btn-block btn-info" value="Düzenle" MusteriId ="' + row[0] + '"/>';
                }
            },
            {
                "aTargets": [10],
                "bSortable": false,
                "mRender": function (data, type, row) {
                    return '<input type="button" class="btn btn-block btn-danger" value="Sil" MusteriId ="' + row[0] + '"/>';
                }
            }]
        });
    }
</script>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            @*<div class="box-header with-border">
                    <i class="fa fa-users"></i><h3 class="box-title">Müşteri Listesi</h3>
                </div>*@
            <div class="box-body">
                <table id="tableMusteriler" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Kod-Müşteri</th>
                            <th>Yetkili Kişi</th>
                            <th>Adres</th>
                            <th>Tel</th>
                            <th>Faks</th>
                            <th>Mobile</th>
                            <th>Mail</th>
                            <th>Web</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>